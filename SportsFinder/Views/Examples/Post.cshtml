@model SportsFinder.Data.Models.WeatherForecast
@{
    ViewData["Title"] = "RazorPost";
}

<h1>Form</h1>


<form asp-controller="Examples" asp-action="PostResult" method="post">
    @Html.AntiForgeryToken()

    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <label class="label" asp-for="Summary"></label>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <input class="input" asp-for="Summary" type="text" placeholder="" autofocus="">
                </div>
                <span asp-validation-for="Summary" class="help is-danger"></span>
            </div>
        </div>
    </div>
    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <label class="label" asp-for="TemperatureC"></label>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <input class="input" asp-for="TemperatureC" type="text" placeholder="" autofocus="">
                </div>
                <span asp-validation-for="TemperatureC" class="help is-danger"></span>
            </div>
        </div>
    </div>
    <div class="field is-horizontal">
        <div class="field-label is-normal">
            <label class="label" asp-for="DateFormatted"></label>
        </div>
        <div class="field-body">
            <div class="field">
                <div class="control">
                    <input class="input" asp-for="DateFormatted" type="text" placeholder="" autofocus="">
                </div>
                <span asp-validation-for="DateFormatted" class="help is-danger"></span>
            </div>
        </div>
    </div>

    <div class="control">
        <button class="button is-primary" type="submit">Submit</button>
    </div>
</form>



@section Scripts {
    <partial name="~/Views/Shared/_ValidationScriptsPartial.cshtml" />
}

