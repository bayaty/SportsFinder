@{
    ViewData["Title"] = "Home Page";
}
<div class="tile is-ancestor">
    <div class="tile is-vertical is-4 link" onclick="window.location = '/Events/Create'" style="cursor: pointer;">

        <div class="tile">
            <div class="tile is-parent is-vertical">
                <article class="tile is-child notification is-info">
                    <p class="title">Create Event</p>
                    <p class="subtitle">Create a sporting event of your choice!</p>
                    <div class="parent" style=" width: 50%;height: 50%; margin:auto ; display: flex;">
                        <div style=" margin: auto auto;">
                            <i class="fas fa-plus fa-3x"></i>
                        </div>
                    </div>
                </article>

            </div>

        </div>
    </div>
    <div class="tile is-vertical is-4 link" onclick="window.location = '/Events'" style="cursor: pointer;">
        <div class="tile">
            <div class="tile is-parent is-vertical">
                <article class="tile is-child notification is-primary">
                    <p class="title">View Events</p>
                    <p class="subtitle">Browse events and meet new people near you!</p>
                    <div class="parent" style=" width: 50%;height: 50%; margin:auto ; display: flex;">
                        <div style=" margin: auto auto;">
                            <i class="fas fa-list-ul fa-3x"></i>
                        </div>
                    </div>
                </article>



            </div>

        </div>

    </div>
    <div class="tile is-vertical is-4 link" onclick="window.location = '/Identity/Account/Manage'" style="cursor: pointer;">
        <div class="tile">
            <div class="tile is-parent">
                <article class="tile is-child notification is-danger">
                    <p class="title">Profile</p>
                    <p class="subtitle">Click here to view your Profile.</p>
                    <div class="parent" style=" width: 50%;height: 50%; margin:auto ; display: flex;">
                        <div style=" margin: auto auto;">
                            <i class="fas fa-user fa-3x"></i>

                        </div>
                    </div>
                    <br>
                    <br>
                    <br>
                    <br>
                </article>

            </div>

        </div>
    </div>

</div>


@* Map*@
<div id="googleMap" style="width:100%;height:400px;"></div>


<script>
    function initMap() {
        var mapProp = {
            center: new google.maps.LatLng(51.508742, -0.120850),
            zoom: 5,
        };
        var map = new google.maps.Map(document.getElementById("googleMap"), mapProp);
        var marker = new google.maps.Marker({
            position: {lat: 0,lng: 0},
            map: map,
            title: "hello"
        })
    }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyA3ip94spW3zOWteW8rZuS8NCMOYyzXblA&callback=initMap"
        type="text/javascript"></script>