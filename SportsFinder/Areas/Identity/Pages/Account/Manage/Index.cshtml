@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="container">
    <partial name="_StatusMessage" for="StatusMessage" />
    <p class="title is-4">@ViewData["Title"]</p>
    <form id="profile-form" method="post">
        <div asp-validation-summary="All" class="has-text-danger"></div>
        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label" asp-for="Username"></label>
            </div>
            <div class="field-body">
                <div class="field">
                    <div class="control">
                        <input class="input" asp-for="Username" disabled />

                    </div>
                </div>
            </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label" asp-for="Input.DisplayName"></label>
            </div>
            <div class="field-body">
                <div class="field">
                    <div class="control">
                        <input class="input" asp-for="Input.DisplayName" />

                    </div>

                    <span asp-validation-for="Input.DisplayName" class="help is-danger"></span>
                </div>
            </div>
        </div>
        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label" asp-for="Input.Location"></label>
            </div>
            <div class="field-body">
                <div class="field">
                    <div class="control">
                        <input class="input" asp-for="Input.Location" />

                    </div>

                    <span asp-validation-for="Input.Location" class="help is-danger"></span>
                </div>
            </div>
        </div>
        @if (Model.IsEmailConfirmed)
        {
            <div class="field is-horizontal">
                <div class="field-label is-normal">
                    <label class="label" asp-for="Input.Email"></label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <input class="input" asp-for="Input.Email" />
                        </div>
                        <span asp-validation-for="Input.Email" class="help is-danger"></span>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="field has-addons">
                <div class="field-label is-normal">
                    <label class="label" asp-for="Input.Email"></label>
                </div>
                <div class="field-body">
                    <div class="field">
                        <div class="control">
                            <input class="input" asp-for="Input.Email" />
                        </div>
                        <span asp-validation-for="Input.Email" class="help is-danger"></span>
                    </div>
                    <p class="control">
                        <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="button is-text">Send verification email</button>
                    </p>
                </div>
            </div>
        }
        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label" asp-for="Input.PhoneNumber"></label>
            </div>
            <div class="field-body">
                <div class="field">
                    <div class="control">
                        <input class="input" asp-for="Input.PhoneNumber" />

                    </div>

                    <span asp-validation-for="Input.PhoneNumber" class="help is-danger"></span>
                </div>
            </div>
        </div>

        <button id="update-profile-button" type="submit" class="button is-primary">Save</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}